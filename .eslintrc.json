{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semicolon": {
      "options": "never",
      "severity": "error"
    },
    "quotemark": {
      "options": "single",
      "severity": "error"
    },
    "max-classes-per-file": false
  }
}